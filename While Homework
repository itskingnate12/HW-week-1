num = int(input("Enter a decimal number: "))

original = num        # save for display
binary = ""           # binary result will build here

if num == 0:
    binary = "0"
else:
    while num > 0:
        remainder = num % 2
        binary = str(remainder) + binary   # build the binary string
        num = num // 2

print(f"Decimal {original} in binary is: {binary}")
